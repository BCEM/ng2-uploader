{
  "rules": {
    "align": [
      true, 
      "statements"
    ],
    "class-name": true,
    "comment-format": [
      true, 
      "check-space"
    ],
    "curly": true,
    "eofline": true,
    "forin": true,
    "jsdoc-format": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [
      true, 
      "always-prefix"
    ],
    "label-position": true,
    "max-line-length": [
      false
    ],
    "member-ordering": [
      true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "new-parens": true,
    "typedef": [
      true,      
      "parameter",      
      "property-declaration",
      "member-variable-declaration"
    ],
    "member-access": [
      true,
      "check-accessor"
    ],
    "no-bitwise": false,
    "no-var-requires": true,
    "no-inferrable-types": true,
    "no-internal-module": true,
    "no-reference": true,
    "no-arg": true,
    "no-construct": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": false,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-unreachable": true,
    "no-use-before-declare": true,
    "no-conditional-assignment": true,
    "no-debugger": true,
    "no-invalid-this": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-finally",      
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",      
      "check-type",
      "check-typecast"
    ],
    "use-isnan": true,
    "use-strict": [
      true, 
      "check-module",
      "check-function"
      ]
  }
}